<struts>

 <package name="btn" namespace="/" extends="basic">
	<action name="deposit"><result>./page/deposit.jsp</result></action>
	<action name="withdraw"><result>./page/withdraw.jsp</result></action>
	<action name="transfer"><result>./page/transfer.jsp</result></action>
	<action name="transferlist"><result>./page/transferlist.jsp</result></action>
	<action name="loan"><result>./page/loan.jsp</result></action>
	
	<action name="depositResult" class="sesschool.bank.action.AccountAction" method="deposit">
	<result name="success" type="redirect">haveaccount.action</result> 
	</action>
	<action name="withdrawResult" class="sesschool.bank.action.AccountAction" method="withdraw">
	<result name="success" type="redirect">haveaccount.action</result> 
	</action>
	<action name="transferResult" class="sesschool.bank.action.AccountAction" method="transfer">
	<result name="success" type="redirect">haveaccount.action</result> 
	</action>
	<action name="transferListResult" class="sesschool.bank.action.AccountAction" method="transferList">
	<result name="success" type="redirect">haveaccount.action</result> 
	</action>
	<action name="loanResult" class="sesschool.bank.action.AccountAction" method="loan">
	<result name="success" type="redirect">haveaccount.action</result> 
	</action>
 </package>


	<package name="acc" namespace="/" extends="basic">

		<default-interceptor-ref name="loginInterceptorStack"></default-interceptor-ref>

		<action name="addaccount_1" class="sesschool.bank.action.AccountAction">
			<result name="success">./account/addaccount_1.jsp</result>
		</action>
		<action name="addaccount_2" class="sesschool.bank.action.AccountAction">
			<result name="success">./account/addaccount_2.jsp</result>
		</action>

		<action name="addaccount_3" class="sesschool.bank.action.AccountAction">
			<result name="success">./account/addaccount_3.jsp</result>
		</action>


		<action name="haveaccount" class="sesschool.bank.action.AccountAction" method="haveAccount">
